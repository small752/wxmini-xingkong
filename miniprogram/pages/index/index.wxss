/**index.wxss**/

.index-page-container {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-image: url('https://img.ishanshan.com/gimg/n/20181127/7caad76ee1f8cb1429abc01b4b338813');
  background-size: 100% 100%;
  display:block;
}

.index-content {
  height:calc(100% - 100px);
  padding: 50px;
  font-size: 18px;
  opacity: 0.5;
  display:block;
}

.draft-pool-content {
  width: 100%;
  height: 100%;
  font-size: 18px;
  display:block;
  position: relative;
}

.draft-item-image {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  padding: 5px;
  background-color: #FFF;
  position: absolute;
  animation: draft_item_anim 2s ease-in-out 0s infinite alternate;
}

@keyframes draft_item_anim{
from{transform:translate(0,0)}
to{transform:translate(0,10px)}
}